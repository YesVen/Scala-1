-- A simple program which takses a input string and compare adjacent letters
object MyFirstScala {
	def main (args: Array[String]) {
	 	   
	   val name = "Jaames"
	   val input = name.toLowerCase
	   var len = name.length
	   for ( i <- 0 to len - 2){	   
	        if ( input(i) == input(i+1) ){
	          println("matched" + input(i) + ":" + input(i+1))
	        }else{
	           println("notmatched" + input(i) + ":" + input(i+1))
	        }	     
	   } //For
	} // Main
} // Class
